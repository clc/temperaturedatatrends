<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="hideKeyboard"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/timeSinceLastMeasurement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:layout_marginLeft="8dip"
            android:text=""
            android:textColor="#FF000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/temperature"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:hint="@string/pleaseentertemperature"
            android:inputType="numberDecimal"
            android:textColor="#FF000000"
            android:textColorHint="#FF808080" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dip"
                android:text="I am feeling..."
                android:textColor="#FF000000"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/radioGroupFeeling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radioWell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dip"
                    android:checked="true"
                    android:onClick="hideKeyboard"
                    android:text="@string/radio_well"
                    android:textColor="#FF000000"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/radioSick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dip"
                    android:onClick="hideKeyboard"
                    android:text="@string/radio_sick"
                    android:textColor="#FF000000"
                    android:textSize="20sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/symptoms"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:orientation="vertical"
            android:visibility="gone" >

            <CheckBox
                android:id="@+id/extremetiredness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hideKeyboard"
                android:text="Extreme tiredness"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/musclepain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hideKeyboard"
                android:text="Muscle pain"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/headache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hideKeyboard"
                android:text="Headache"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/sorethroat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hideKeyboard"
                android:text="Sore throat"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/vomiting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hideKeyboard"
                android:text="Vomiting"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/diarrhea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hideKeyboard"
                android:text="Diarrhea"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/rash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hideKeyboard"
                android:text="Rash"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/bleeding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hideKeyboard"
                android:text="Unexplained bleeding"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/painrelief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="hideKeyboard"
                android:text="Taking pain relievers"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dip"
            android:background="#FFFFFF" />

        <Button
            android:id="@+id/submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:text="@string/submit"
            android:textColor="#FF000000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <Button
            android:id="@+id/history"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:text="@string/viewhistory"
            android:textColor="#FF000000" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <Button
            android:id="@+id/viewtos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:text=" "
            android:textColor="#FF000000" />
    </LinearLayout>

</ScrollView>